<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@base64-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.vipulkumarsinghtech.developertoolbox.Base64Controller">
    <Label text="Enter text to encode to Base64:" />
    <TextArea fx:id="encodeTextArea" styleClass="encodeTextArea" promptText="Enter your text" />
    <Button onAction="#encodeToBase64" styleClass="encodeButton" text="Encode" />
    <Button onAction="#copyEncodedResult" styleClass="encodeButton" text="Copy Result" />
    <Label fx:id="encodeResult" />

    <Label text="Enter text to decode from Base64:" />
    <TextArea fx:id="decodeTextArea" styleClass="decodeTextArea" promptText="Enter your text" />
    <Button onAction="#decodeToBase64" styleClass="decodeButton" text="Decode" />
    <Button onAction="#copyDecodedResult" styleClass="decodeButton" text="Copy Result" />
    <Label fx:id="decodeResult" />
</VBox>
