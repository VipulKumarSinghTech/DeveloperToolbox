<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@epoch-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.vipulkumarsinghtech.developertoolbox.JwtController">
    <Label text="JWT token convertor:" />
    <TextArea fx:id="token" styleClass="token" promptText="Enter JWT token:" />
    <Button onAction="#convertToDateTime" styleClass="convertToDateTime" text="Convert" />
    <Button onAction="#copyDateTime" styleClass="convertToDateTime" text="Copy Result" />
    <Label fx:id="dateTimeResult" />
</VBox>
