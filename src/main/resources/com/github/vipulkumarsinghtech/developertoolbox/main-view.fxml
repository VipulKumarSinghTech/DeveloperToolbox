<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.vipulkumarsinghtech.developertoolbox.MainController"
            fx:id="rootPane">

    <top>
        <MenuBar>
            <Menu text="Tools">
                <MenuItem text="Base 64 Conversion" onAction="#loadScene1"/>
                <MenuItem text="Epoch Conversion" onAction="#loadScene2"/>
                <MenuItem text="JWT Decoder" onAction="#loadScene3"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="Exit" onAction="#exitApplication"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox fx:id="contentPane">
            <!-- Add your content here -->
        </VBox>
    </center>
</BorderPane>
